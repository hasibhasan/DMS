@{
    ViewBag.Title = "ForgotPassword";
}
<div class="container">
    <h2>Reset Your Password?</h2>

    @if (!String.IsNullOrEmpty(ViewBag.errorMessage))
    {
        <div class="alert alert-danger">
            <button type="button" class="close" data-dismiss="alert">
                <i class="ace-icon fa fa-times"></i>
            </button>
            <strong>Account Login Error!</strong>
            @ViewBag.errorMessage
            <br>
        </div>
    }
    <div class="row">
        <div class="col-md-6">
            <section id="loginForm">
                @using (Html.BeginForm("ForgotPassword", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                {
                    @Html.AntiForgeryToken()                                       
                    <div class="form-group">
                        @Html.Label("Email", new { @class = "col-md-2 control-label" })
                        <div class="col-md-10">
                            @Html.TextBox("emailTxtBox","",new { @class = "form-control", required = "required"})                            
                        </div>
                    </div>                            
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Log in" class="btn btn-default" />
                        </div>
                    </div>                   
                }
            </section>
        </div>        
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}